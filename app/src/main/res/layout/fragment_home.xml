<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/favoriteGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_favorite_genres"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35000002" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/favoriteMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/select_favorite_movies"
            app:layout_constraintEnd_toEndOf="@+id/favoriteGenres"
            app:layout_constraintStart_toStartOf="@+id/favoriteGenres"
            app:layout_constraintTop_toBottomOf="@+id/favoriteGenres" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
